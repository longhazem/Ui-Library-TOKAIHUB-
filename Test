-- Chờ game tải xong một chút
if not game:IsLoaded() then game.Loaded:Wait() end

local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")

local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

local Library = {}

-- Hàm Drag mượt mà
local function MakeDraggable(frame)
    local dragging, dragInput, dragStart, startPos
    frame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then dragging = false end
            end)
        end
    end)
    frame.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
            dragInput = input
        end
    end)
    RunService.RenderStepped:Connect(function()
        if dragging and dragInput then
            local delta = dragInput.Position - dragStart
            frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
end

function Library:CreateWindow()
    -- Xóa UI cũ nếu đã tồn tại để tránh lỗi
    if PlayerGui:FindFirstChild("TOKAI_V3") then
        PlayerGui:FindFirstChild("TOKAI_V3"):Destroy()
    end

    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "TOKAI_V3"
    screenGui.Parent = PlayerGui -- Đổi sang PlayerGui để chắc chắn hiện
    screenGui.ResetOnSpawn = false
    screenGui.IgnoreGuiInset = true -- Tràn màn hình

    local mainSize = UDim2.new(0, 520, 0, 320)
    local logoID = "rbxassetid://136094224630213"

    -- NÚT MỞ (MINI LOGO)
    local openBtn = Instance.new("ImageButton", screenGui)
    openBtn.Size = UDim2.new(0, 50, 0, 50)
    openBtn.Position = UDim2.new(0, 20, 0.2, 0)
    openBtn.Visible = false
    openBtn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    openBtn.Image = logoID
    openBtn.Active = true
    openBtn.ZIndex = 1000
    Instance.new("UICorner", openBtn).CornerRadius = UDim.new(1, 0)
    local os = Instance.new("UIStroke", openBtn)
    os.Thickness = 2
    os.Color = Color3.fromRGB(255, 255, 255)
    MakeDraggable(openBtn)

    -- MAIN FRAME
    local main = Instance.new("Frame", screenGui)
    main.Name = "MainFrame"
    main.Size = mainSize
    main.Position = UDim2.new(0.5, 0, 0.5, 0)
    main.AnchorPoint = Vector2.new(0.5, 0.5)
    main.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
    main.BorderSizePixel = 0
    main.Active = true
    Instance.new("UICorner", main).CornerRadius = UDim.new(0, 10)
    local ms = Instance.new("UIStroke", main)
    ms.Thickness = 2
    MakeDraggable(main)

    -- NÚT ĐÓNG
    local close = Instance.new("TextButton", main)
    close.Size = UDim2.new(0, 30, 0, 30)
    close.Position = UDim2.new(1, -35, 0, 5)
    close.BackgroundTransparency = 1
    close.Text = "×"
    close.TextColor3 = Color3.fromRGB(255, 255, 255)
    close.TextSize = 30
    close.Font = Enum.Font.GothamBold

    close.MouseButton1Click:Connect(function()
        main.Visible = false
        openBtn.Visible = true
    end)

    openBtn.MouseButton1Click:Connect(function()
        openBtn.Visible = false
        main.Visible = true
    end)

    -- RGB LED
    coroutine.wrap(function()
        local h = 0
        while true do
            h = h + 1/300
            local c = Color3.fromHSV(h%1, 0.6, 1)
            ms.Color = c
            os.Color = c
            task.wait()
        end
    end)()

    -- SIDEBAR
    local sidebar = Instance.new("Frame", main)
    sidebar.Size = UDim2.new(0, 140, 1, 0)
    sidebar.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
    sidebar.BorderSizePixel = 0
    Instance.new("UICorner", sidebar)

    local title = Instance.new("TextLabel", sidebar)
    title.Size = UDim2.new(1, 0, 0, 50)
    title.Text = "TOKAI V3"
    title.TextColor3 = Color3.fromRGB(255, 255, 255)
    title.Font = Enum.Font.GothamBold
    title.TextSize = 18
    title.BackgroundTransparency = 1

    local pages = Instance.new("Frame", main)
    pages.Size = UDim2.new(1, -150, 1, -20)
    pages.Position = UDim2.new(0, 145, 0, 10)
    pages.BackgroundTransparency = 1

    function Library:CreateTab(name)
        local tabBtn = Instance.new("TextButton", sidebar)
        tabBtn.Size = UDim2.new(0, 120, 0, 30)
        tabBtn.Position = UDim2.new(0, 10, 0, 60) -- Cần list layout nhưng test nhanh nên để tạm
        tabBtn.Text = name
        
        -- Auto Layout đơn giản cho Tab
        local count = 0
        for _, v in pairs(sidebar:GetChildren()) do if v:IsA("TextButton") then count = count + 1 end end
        tabBtn.Position = UDim2.new(0, 10, 0, 15 + (count * 35))
        
        local p = Instance.new("ScrollingFrame", pages)
        p.Size = UDim2.new(1, 0, 1, 0)
        p.Visible = (count == 1)
        p.BackgroundTransparency = 1
        p.ScrollBarThickness = 2
        Instance.new("UIListLayout", p).Padding = UDim.new(0, 5)

        tabBtn.MouseButton1Click:Connect(function()
            for _, v in pairs(pages:GetChildren()) do v.Visible = false end
            p.Visible = true
        end)

        return {
            AddButton = function(_, text, cb)
                local b = Instance.new("TextButton", p)
                b.Size = UDim2.new(1, -10, 0, 35)
                b.Text = text
                b.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
                b.TextColor3 = Color3.fromRGB(255, 255, 255)
                Instance.new("UICorner", b)
                b.MouseButton1Click:Connect(cb)
            end
        }
    end
    
    return Library
end

-- --- CHẠY ---
local UI = Library:CreateWindow()
local MainTab = UI:CreateTab("Main")
MainTab:AddButton("Test Button", function() print("Clicked!") end)
